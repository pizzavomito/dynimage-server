<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
   
     
    <parameters>
       
             
        <parameter key="foo.arguments" type="collection">
            <parameter key="enabled">true</parameter>
         </parameter>
        
        
    </parameters>   

            
                       
    <services>

        <service id="foo" class="%dynimage.package_class%">
            <argument>%foo.arguments%</argument>
            <call method="addModule">
                <argument>thumb</argument>
                <argument>%dynimage.app_dir%/resources/dynimage/packages/foo/%dynimage.env%/thumb.xml</argument>
            </call>
            <call method="addModule">
                <argument>preview</argument>
                <argument>%dynimage.app_dir%/resources/dynimage/packages/foo/%dynimage.env%/preview.xml</argument>
            </call>
            <tag name="dynimage.package" />
        </service>
       
    </services>

</container>